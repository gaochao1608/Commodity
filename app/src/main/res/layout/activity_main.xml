<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qf.administrator.commodity.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/cool"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/MyToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#000000"
                    app:layout_scrollFlags="scroll">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"                        >
                        <ImageView
                            android:id="@+id/iv_menu"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/hamburger_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.qf.administrator.commodity.myview.CircleImageView
                            android:id="@+id/iv_head"
                            android:layout_toRightOf="@+id/iv_menu"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/ic_user_photo_bg" />
                        <ImageView
                            android:id="@+id/iv_camera"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_find"
                            android:src="@mipmap/cwac_cam2_ic_action_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_find"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/btn_search" />
                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar"
                    android:background="#000000"
                    app:tabTextColor="#ffffff" />
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cool"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            </android.support.v4.view.ViewPager>
        </android.support.design.widget.CoordinatorLayout>
        <android.support.design.widget.FloatingActionButton
            android:src="@drawable/screen"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            app:backgroundTint="@color/black"
            android:id="@+id/bt_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/big_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/drawer_header_bg" />

            <com.qf.administrator.commodity.myview.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/ic_user_photo_bg" />

            <TextView
                android:id="@+id/tv_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/civ_head"
                android:layout_marginLeft="45dp"
                android:text="点击头像登录"
                android:textColor="#ffffff" />

            <LinearLayout
                android:id="@+id/ll_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/big_map"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_home"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    首页"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_message"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    消息"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_order"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    订单"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_balance"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    余额"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_adress"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    收货地址"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_first"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_camera"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    晒单"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_comment"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    评论"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_like"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    收藏"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_follow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_follow"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    关注"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_fans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:drawableLeft="@mipmap/drawer_fans"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="    粉丝"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_second"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_push"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_select"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:text="推送"
                        android:textSize="20sp" />

                    <Switch
                        android:id="@+id/bt_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bt_push_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_select"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dp"
                        android:text="推送时间"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/end_time"
                        android:text="8:00--" />

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/bt_push_time"
                        android:layout_centerVertical="true"
                        android:text="20:00" />
                </RelativeLayout>

                <Button
                    android:id="@+id/bt_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="联系客服"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="评分"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="积分"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_get_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="如何获得积分"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bt_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_select"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="版本更新"
                    android:textSize="20sp" />
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>
