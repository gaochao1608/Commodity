<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_zan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:drawableTop="@drawable/zan"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_cai"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:drawableTop="@drawable/cai"
            android:layout_marginTop="10dp"
            android:src="@drawable/cai"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_details_share"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_like"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@null"
            android:drawableTop="@drawable/like"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/like"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_buyonce"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/btn_buy_select"
            android:text="一键购买"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <ScrollView
        android:id="@+id/sv"
        android:layout_above="@id/ll"
        android:background="#ededed"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/img_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>




            <TextView
                android:id="@+id/txt_goodsinfo_goodsname"
                android:background="#fff"
                android:text="dasda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_goodsinfo_after_price"
                    android:layout_width="wrap_content"
                    android:text="123"
                    android:textSize="20sp"
                    android:textColor="#f00"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_goodsinfo_before_price"
                    android:layout_width="wrap_content"
                    android:text="135"
                    android:layout_marginLeft="8dp"
                    android:layout_alignBottom="@id/txt_goodsinfo_after_price"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/txt_goodsinfo_after_price"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/view_line"
                    android:layout_width="wrap_content"
                    android:background="#b4b0b0"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/txt_goodsinfo_after_price"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@id/txt_goodsinfo_before_price"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/txt_goodsinfo_discount"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_leaf"
                    android:textColor="#f00"
                    android:padding="5dp"
                    android:layout_alignTop="@id/txt_goodsinfo_after_price"
                    android:layout_alignBottom="@id/txt_goodsinfo_after_price"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="商品评价"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_goodsinfo_more"
                    android:layout_width="wrap_content"
                    android:text="该品牌所有商品>"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_goodsinfo_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="等人贡献了"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txt_goodsinfo_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="个赞"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#000"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="暂无评价"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/img_user_icon"
                    android:layout_width="40dp"
                    android:src="@mipmap/mine"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/txt_comment_user"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/img_user_icon"
                    android:layout_alignTop="@id/img_user_icon"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/comment_time"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/txt_comment_user"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/comment"
                    android:layout_toRightOf="@id/img_user_icon"
                    android:layout_below="@id/txt_comment_user"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="品牌简介"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_brand_title"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/img_goods_img"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="购买流程"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/img_goods_buy"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="相关商品"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rlv_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>