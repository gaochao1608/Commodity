<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    app:cardCornerRadius="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:contentPaddingTop="10dp"
                                    android:layout_margin="2dp"
                                    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:id="@+id/img_recfragment"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_recfragment_title"
            android:layout_toRightOf="@id/img_recfragment"
            android:layout_alignTop="@id/img_recfragment"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_recfragment_price"
            android:textColor="#f00"
            android:layout_below="@id/txt_recfragment_title"
            android:layout_toRightOf="@id/img_recfragment"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_commmmm"
            android:layout_toRightOf="@id/img_recfragment"
            android:layout_width="wrap_content"
            android:src="@mipmap/comment_icon_gray"
            android:layout_alignBottom="@id/img_recfragment"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_comment_count"
            android:layout_width="wrap_content"
            android:text="1"
            android:layout_alignBottom="@id/img_commmmm"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_commmmm"

            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_recfragment_time"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@id/img_recfragment"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>





    </RelativeLayout>

</android.support.v7.widget.CardView>