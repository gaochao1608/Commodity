<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:contentPaddingTop="10dp"
                                    android:layout_margin="2dp"
                                    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/img_firfrag_goods"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/txt_firfrag_goodsname"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <TextView
               android:id="@+id/txt_firfrag_after_price"
               android:layout_width="wrap_content"
               android:text="123"
               android:textSize="20sp"
               android:textColor="#f00"
               android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_firfrag_before_price"
                android:layout_width="wrap_content"
                android:text="135"
                android:layout_marginLeft="8dp"
                android:layout_alignBottom="@id/txt_firfrag_after_price"
                android:textSize="15sp"
                android:layout_toRightOf="@id/txt_firfrag_after_price"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="40dp"
                android:background="#b4b0b0"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/txt_firfrag_after_price"
                android:layout_centerVertical="true"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/txt_firfrag_discount"
                android:background="@drawable/shape_leaf"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#f00"
                android:padding="5dp"
                android:layout_alignTop="@id/txt_firfrag_after_price"
                android:layout_alignBottom="@id/txt_firfrag_after_price"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="来自"
                android:id="@+id/txt_comefrom"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_firfrag_cate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="类标签"
                android:id="@+id/txt_baioqian"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        
    </LinearLayout>


</android.support.v7.widget.CardView>