<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qf.administrator.commodity.activity.BuyShowActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_margin="10dp"
                android:src="@drawable/ic_launcher"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tv_name"
                android:text="name"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money"
                android:text="money"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_below="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="+关注"
                android:layout_margin="10dp"
                android:padding="0dp"
                android:id="@+id/bt_attention"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_stroke_black"
                android:layout_width="50dp"
                android:layout_height="30dp" />
            <TextView
                android:text="1/8"
                android:id="@+id/tv_per"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:layout_below="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v4.view.ViewPager
                android:id="@+id/comment_pager"
                android:layout_below="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </android.support.v4.view.ViewPager>
            <TextView
                android:text="优点"
                android:id="@+id/tv_good"
                android:layout_margin="10dp"
                android:layout_below="@+id/comment_pager"
                android:background="#000"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="优点"
                android:layout_margin="10dp"
                android:id="@+id/tv_good_content"
                android:layout_below="@+id/comment_pager"
                android:layout_toRightOf="@+id/tv_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="缺点"
                android:id="@+id/tv_bad"
                android:layout_margin="10dp"
                android:layout_below="@+id/tv_good"
                android:background="#000"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="缺点"
                android:layout_margin="10dp"
                android:id="@+id/tv_bad_content"
                android:layout_below="@+id/tv_good"
                android:layout_toRightOf="@+id/tv_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="心得"
                android:id="@+id/tv_option"
                android:layout_margin="10dp"
                android:layout_below="@+id/tv_bad"
                android:background="#000"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="心得"
                android:layout_margin="10dp"
                android:id="@+id/tv_option_content"
                android:layout_below="@+id/tv_bad"
                android:layout_toRightOf="@+id/tv_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.qf.administrator.commodity.myview.MyRecycleView
                android:layout_below="@id/tv_option_content"
                android:id="@+id/recycle_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.qf.administrator.commodity.myview.MyRecycleView>
            <Button
                android:id="@+id/bt_all"
                android:text="全部评论"
                android:background="@color/white"
                android:layout_below="@+id/recycle_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:background="#fff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_up"
            android:text=" 20"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_up_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" 20"
            android:id="@+id/tv_down"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_down_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" 20"
            android:id="@+id/tv_comment"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_details_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" 20"
            android:id="@+id/tv_collect"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/details_like_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_buy_once"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/btn_buy_select"
            android:text="一键购买"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
